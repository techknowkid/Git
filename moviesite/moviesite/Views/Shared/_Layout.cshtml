<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="img/fav.png">
    <!-- Author Meta -->
    <meta name="author" content="Colorlib">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Movie trivia</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <!--
    CSS
    ============================================= -->
    
    
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/linearicons.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <!-- Start Banner Area -->
    
    <section class="single-img relative" id="home">
        <div class="container">
            <!-- Start Header Area -->
            <header class="default-header">

                <div class="container">
                    <div class="header-wrap">
                        <div class="header-top d-flex justify-content-between align-items-center">
                            <div class="logo">
                                <a href="#home"><img src="~/Content/img/logo.png" alt=""></a>
                            </div>
                            <div class="main-menubar d-flex align-items-center">
                                <nav class="hide">
                                    <a href="#home">Home</a>
                                    <a href="#feature">Feature</a>
                                    <a href="#about">About</a>
                                    <a href="#contact">Contact</a>
                                    <a >@Html.Partial("_LoginPartial")</a>
                                </nav>
                               
                                <div class="menu-bar"><span class="lnr lnr-menu"></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>


            <div class="row fullscreen align-items-center justify-content-center " style="height: 735px;">

                <div class="col-lg-10">

                    <div class="banner-content text-center">
                        <h1 class="text-uppercase text-white">Welcome to Movie trivia</h1>
                        <p class="text-uppercase mx-auto">
                            <button class="btn-primary d-inline-flex align-items-center mt-20" onclick="javascript:clickinner(this)"><span  >Play Quiz</span><span class="lnr lnr-film-play"></span></button> <br>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- End Banner Area -->
    </section>
    <!-- End Header Area -->
    <div class="container body-content">
        @RenderBody()
        <!-- Strat Footer Area -->
        <footer class="footer-area">
            <div class="container">
                <div class="row footer-content">

                    <div class="col-lg-6 footer-social">
                        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-dribbble"></i></a>
                        <a href="#"><i class="fa fa-behance"></i></a>
                    </div>
                </div>
            </div>
        </footer>

       
               

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)


            <script src="~/Scripts/jquery-2.2.4.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

            <script src="~/Scripts/bootstrap.min.js"></script>
            <script src="~/Scripts/owl.carousel.min.js"></script>
            <script src="~/Scripts/jquery.sticky.js"></script>
            <script src="~/Scripts/parallax.min.js"></script>
            <script src="~/Scripts/jquery.magnific-popup.min.js"></script>
            <script>


                $(".default-header").sticky({ topSpacing: 0 });

                function clickinner(target) { // Target refers to the clicked element
                    debugger;
                    location.href = '/Account/Login';
                };
                // screen popup
                function popup(modalName) {
                    debugger;
                    //document.getElementById("overlay").style.height = '100%'//document.body.clientHeight + 'px';;
                    //document.getElementById("overlay").className = "OverlayEffect";

                    document.getElementById(modalName).className = "ShowModal"
                    document.getElementById(modalName).style.height = 'auto'

                }

            </script>

            <style>
                .banner-area {
                    background: url(../Content/img/banner-bg.jpg) no-repeat center center/cover;
                }

                .ShowModalMini {
        left: auto;
        height: 70%;
        width: 50%;
        top: 30px;
        z-index: 100001;
        position: fixed;
        background-color: ghostwhite;
        display: block;
        overflow: visible;
        border-color: transparent;
        border-style: solid;
        color: black;
        background-clip: padding-box;
        border-radius: 6px;
    }

.ShowModal {
        top: 30px;
        left: 500px;
        z-index: 10400020;
        position: fixed;
        background-color: ghostwhite;
        display: block;
        overflow: visible;
        /*width: 800px;*/
        width: auto;
        height: auto;
        border-color: transparent;
        border-style: solid;
        color: black;
        overflow-x: auto;
        overflow-y: auto;
        background-clip: padding-box;
        border-radius: 6px;
    }
.OverlayEffect {
        background-color: black;
        filter: alpha(opacity=70);
        opacity: 0.7;
        width: 100%;
        height: 100%;
        z-index: 10000;
        position: fixed;
        top: 0;
        left: 0;
    }
 .HideModal {
        display: none;
    }
            </style>
</body>
</html>
